# Configuration de production pour CommuniConnect
# Copiez ce fichier vers .env.production et remplissez les valeurs

# Configuration Django
SECRET_KEY=your-super-secret-production-key-here
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,api.your-domain.com

# Configuration de la base de données PostgreSQL
DB_NAME=communiconnect_prod
DB_USER=communiconnect_user
DB_PASSWORD=your-secure-db-password
DB_HOST=localhost
DB_PORT=5432

# Configuration Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Configuration Cloudinary CDN
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
USE_CLOUDINARY=True

# Configuration Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@communiconnect.com
ADMIN_EMAIL=admin@communiconnect.com

# Configuration CORS
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com,https://app.your-domain.com

# Configuration Google Cloud Vision (optionnel)
GOOGLE_CLOUD_VISION_API_KEY=your-google-cloud-vision-api-key

# Configuration Live Streaming
RTMP_SERVER_URL=rtmp://your-streaming-server/live
HLS_SERVER_URL=https://your-streaming-server/hls

# Configuration de sécurité
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True 